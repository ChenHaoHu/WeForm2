<view class="items">
  <view class='title'>猜你感兴趣</view>
  <view class='con'>
   <block wx:for="{{tags}}" wx:key> 
 <view class='tag'>{{item.name}}</view>
   </block>
  </view>
  <view class='more'>
    <i-tag class="i-grouptag" name="标签一" color="yellow" bindtap="moretag">
      更多
