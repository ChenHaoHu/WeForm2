.tag {
  width: 100%;
  padding-top: 30rpx;
  padding-left: 10%;
  font-size: 80rpx;
  color: #888;
}

.items {
  width: 100%;
}

.item {
  width: 94%;
  margin-left: 3%;
  height: 300rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-top: 2rpx solid #eee;
}

.top, .con {
  display: flex;
  flex-direction: row;
}

.top {
  height: 60rpx;
}

.con {
  width: 100%;
  height: 240rpx;
  justify-content: space-between;
}

.top image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
  border-radius: 50%;
}

.name {
  color: #999;
  float: left;
  font-size: 30rpx;
  line-height: 50rpx;
}

.left {
  width: 48%;
  height: 100%;
}

.left .title {
  color: #444;
  font-size: 30rpx;
}

.left .content {
  color: #999;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.right {
  width: 48%;
  /* background-color: gray; */
  height: 100%;
}

.right image {
  width: 90%;
  height: 200rpx;
  border-radius: 5rpx;
}
