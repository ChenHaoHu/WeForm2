.tag {
  width: 100%;
  padding-top: 30rpx;
  padding-left: 10%;
  font-size: 80rpx;
  color: #888;
}

.top_tab {
  width: 100%;
  position: fixed;
  height: 42px;
  background-color: white;
  z-index: 10;
}

.tabs {
  padding-top: 42px;
}

.item {
  width: 94%;
  margin-left: 3%;
  height: 300rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-top: 2rpx solid #eee;
}

.top, .con {
  display: flex;
  flex-direction: row;
}

.top {
  height: 60rpx;
  position: relative;
}

.con {
  width: 100%;
  height: 240rpx;
  justify-content: space-between;
}

.top image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
  border-radius: 50%;
}

.name {
  color: #999;
  float: left;
  font-size: 30rpx;
  line-height: 50rpx;
}

.left {
  margin-top: 10rpx;
  width: 48%;
  height: 100%;
  position: relative;
}

.left .title {
  color: #444;
  font-size: 30rpx;
}

.left .content {
  color: #999;
  font-size: 28rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.right {
  width: 48%;
  /* background-color: gray; */
  height: 100%;
}

.right image {
  width: 90%;
  height: 200rpx;
  border-radius: 5rpx;
}

.type {
  width: 20%;
  text-align: center;
  font-size: 25rpx;
  border: 2rpx solid #999;
  position: absolute;
  right: 10rpx;
  color: #aaa;
}

.time{
  text-align: center;
  font-size: 25rpx;
  position: absolute;
  bottom: 10rpx;
}

.bg{
  width: 100%;
    background: url('https://www.hcyang.top/file/images/bg.png') no-repeat;
    background-size: 100% 100%;
}