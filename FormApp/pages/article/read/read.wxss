.title {
  width: 80%;
  margin-left: 10%;
  text-align: center;
  padding-top: 30rpx;
  padding-bottom: 10rpx;
  font-weight: 100;
}

.user {
  width: 90%;
  margin-left: 5%;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  font-size: 28rpx;
  color: #444;
}

.user image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.intro {
  width: 90%;
  padding-right: 10rpx;
  margin-left: 2%;
  background-color: rgba(68, 68, 68, 0.281);
  border-left: 20rpx solid rgba(68, 68, 68, 0.342);
  padding-left: 20rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  text-align: justify;
  margin-bottom: 60rpx;
  font-weight: 200;
}

.body {
  width: 96%;
  margin-left: 2%;
  text-align: justify;
  font-size: 35rpx;
  font-weight: 100;
  margin-bottom: 30rpx;
}

.foot {
  margin-top: 10rpx;
  width: 100%;
  height: 90rpx;
  position: fixed;
  background-color: rgb(248, 246, 246);
  bottom: 0rpx;
}

.tools {
  width: 80%;
  margin-left: 10%;
  display: flex;
  justify-content: space-around;
}

.tools view {
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 30rpx;
}

.tag {
  margin-top: 40rpx;
  margin-bottom: 160rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
}

.tag view {
  margin-left: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border: 2rpx solid #aaa;
}

i-panel {
  margin-top: 20rpx;
}

.link {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  font-size: 30rpx;
}

.link view {
  width: 80%;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #00a4ff;
}

button {
  padding: 0rpx;
  margin: 0rpx;
  border: none;
  background-color: rgb(248, 246, 246);
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 30rpx;
}

button image {
  padding: 0rpx;
  margin: 0rpx;
}

button::after {
  border: none;
}
