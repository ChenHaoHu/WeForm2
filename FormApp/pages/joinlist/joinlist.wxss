.main {
  background-color: #eee;
}

.item {
  width: 98%;
  margin-left: 1%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  line-height: 130rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 40rpx;
  background-color: white;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  margin-right: 50rpx;
}

.name {
  font-size: 40rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.top {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 40rpx;
}

.num {
  margin-top: 20rpx;
}
